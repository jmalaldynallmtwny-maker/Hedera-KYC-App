# ===================================
# Interactive KYC Platform - Environment Variables
# ===================================
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database URLs - Citizens
DATABASE_URL_CITIZENS=postgresql://postgres:postgres@localhost:5432/citizens_db

# Database URLs - Banks
DATABASE_URL_BAYBANK=postgresql://postgres:postgres@localhost:5433/baybank_db
DATABASE_URL_OASISBANK=postgresql://postgres:postgres@localhost:5433/oasisbank_db
DATABASE_URL_ZENBANK=postgresql://postgres:postgres@localhost:5433/zenbank_db
DATABASE_URL_ARCBANK=postgresql://postgres:postgres@localhost:5433/arcbank_db
DATABASE_URL_NEXBANK=postgresql://postgres:postgres@localhost:5433/nexbank_db

# Redis
REDIS_URL=redis://localhost:6379

# MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=kyc-requests

# JWT Secrets - Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_IN_PRODUCTION
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption - Generate with: openssl rand -base64 32
AES_KEY=CHANGE_THIS_IN_PRODUCTION
NNI_SALT=CHANGE_THIS_IN_PRODUCTION

# Hedera
HEDERA_OPERATOR_ID=
HEDERA_OPERATOR_KEY=
HEDERA_NETWORK=testnet
HEDERA_TOPIC_ID=

# OpenAI
OPENAI_API_KEY=

# Face Recognition
FACE_SIMILARITY_THRESHOLD=0.90


